<header class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white border-bottom-light">
    <div class="container-fluid">
        <%= link_to root_path, :style=> 'color:;' do %>
            <h2>Holinet Education</h2>
        <%end%>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            <% if custom_signed_in? %>
                <% if custom_signed_in?.admin? %>
                <ul class="navbar-nav mr-auto mt-2 mt-md-0">
                    <li class="nav-item">
                        <a class="nav-link" href="<%= courses_path %>">Cursos</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="<%= students_path %>">Estudiantes</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="<%= teachers_path %>">Maestros</a>
                    </li>
                </ul>
                <%elsif custom_signed_in?.teacher? %>
                    <li class="nav-item">
                        <a class="nav-link" href="<%= courses_path %>">Cursos</a>
                    </li>
                <%elsif custom_signed_in?.student? %>
                    <li class="nav-item">
                        <a class="nav-link">Mis cursos</a>
                    </li>
                <%end%>

                <ul class="navbar-nav ml-auto"> 
                    <%= link_to('Logout', destroy_user_session_path, method: :delete, :class => "nav-link") %>        
                </ul>
            <%end%>
        </div>  
    </div>
</header>