<p id="notice"><%= notice %></p>

<h1 class="text-center mt-3 mb-3">Estudiantes</h1>

<div class="row justify-content-center">
  <div class="col-sm-7">
    <table class="table">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Correo</th>
          <th>Matricula</th>
          <th colspan="3" class="text-center">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.email %></td>
            <td><%= student.matricula %></td>
            <td><%= link_to 'Mostrar', student, :class => "btn btn-primary text-white" %></td>
            <td><%= link_to 'Editar', edit_student_path(student), :class => "btn btn-success text-white"  %></td>
            <td><%= link_to 'Eliminar', student, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger text-white"  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<div class="text-right white-text">
  <%= link_to 'Registro estudiante', new_student_path, class: "btn btn-primary text-white" %>
</div>