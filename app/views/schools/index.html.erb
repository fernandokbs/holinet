<p id="notice"><%= notice %></p>

<h1 class="text-center mt-4 mb-4">Escuelas</h1>

<div class="row justify-content-center">
  <div class="col-sm-7">
    <table class="table">
      <thead>
        <tr>
          <th>Nombre escuela</th>
          <th colspan="3" class="text-center">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @schools.each do |school| %>
          <tr>
            <td><%= school.name %></td>
            <td><%= link_to 'Mostrar', school, :class => "btn btn-primary text-white" %></td>
            <td><%= link_to 'Editar', edit_school_path(school), :class => "btn btn-success text-white" %></td>
            <td><%= link_to 'Eliminar', school, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger text-white" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<div class="text-right white-text">
<%= link_to 'Crear nueva escuela', new_school_path, class: "btn btn-primary text-white" %>
</div>
