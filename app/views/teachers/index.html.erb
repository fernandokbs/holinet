<p id="notice"><%= notice %></p>

<h1 class="text-center mt-4 mb-4">Maestros</h1>

<div class="row justify-content-center">
  <div class="col-sm-7">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Matricula</th>
          <th>Mail</th>
          <th colspan="3" class="text-center">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @teachers.each do |teacher| %>
          <tr>
            <td><%= teacher.name %></td>
            <td><%= teacher.matricula %></td>
            <td><%= teacher.email %></td>
            <td><%= link_to 'Mostrar', teacher, :class => "btn btn-primary text-white" %></td>
            <td><%= link_to 'Editar', edit_teacher_path(teacher), :class => "btn btn-success text-white" %></td>
            <td><%= link_to 'Eliminar', teacher, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger text-white" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<div class="text-right white-text">
<%= link_to 'Crear nuevo maestro', new_teacher_path, class: "btn btn-primary text-white" %>
</div>